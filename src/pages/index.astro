---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/navbar.astro";
import Welcome from "../components/welcome.astro";
import Info from "../components/info.astro"
---

<Layout title="Dashboard" description="Dashboard responsive">
  <div class="h-screen grid grid-cols-2 gap-x-[-80rem] bg-white">
    <section class="ml-5 mt-[2vh] lg:mt-[5vh]">
      <Navbar />
    </section>
   <!--  <div class="grid grid-cols-1 lg:grid-cols-2 gap-y-0 place-content-start">-->
    <div class="flex lg:flex-row flex-col lg:gap-x-28">
      <section
        class="mt-[7vh] md:ml-[-15rem] lg:ml-[-20rem] xl:ml-[-27rem] ml-[-6rem]"
      >
        <Welcome />
      </section>
      <section class="lg:mt-[7vh] lg:ml-0 ml-[-6rem] md:ml-[-15rem]">
        <Info />
      </section>
    </div>
  </div>
</Layout>
