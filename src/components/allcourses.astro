---
import Rating from "./icons/rating.astro";
import Figma from "./icons/figma.astro";
import Drawing from "./icons/drawing.astro";
import Photoshop from "./icons/photoshop.astro";

export interface Props {
  title: string;
  teacher: string;
  img: string;
}
const { title, teacher, img } = Astro.props as Props;
---

<div
  class="h-[4rem] relative flex flex-row items-center bg-slate-200 rounded-xl w-[17.5rem] md:w-[25rem] lg:w-[23rem] xl:w-[26rem] mt-3"
>
  <div
    class="w-14 h-14 lg:w-10 xl:w-14 lg:h-10 xl:h-14 bg-white rounded-xl ml-1 flex justify-center items-center"
  >
    {
      img === "figma" && (
        <>
          <Figma />
        </>
      )
    }
    {
      img === "drawing" && (
        <>
          <Drawing />
        </>
      )
    }
    {
      img === "photoshop" && (
        <>
          <Photoshop />
        </>
      )
    }
  </div>
  <div>
    <p class="font-extrabold text-sm ml-2 md:ml-8">
      {title}
      <br />
    </p><p class="ml-2 md:ml-8 text-sm">
      {teacher}
    </p>
  </div>
  <p class="absolute left-[13.5rem] lg:left-56 text-xs flex ml-5 md:mb-0 mb-6"><Rating /> 4.9</p>
  <button
    class="absolute right-0 md:right-[7px] bg-white hover:bg-black text-black hover:text-white border-black hover:border-white border mt-7 md:mt-0 md:py-[6px] px-2 md:px-4 rounded-lg"
    >View course</button
  >
</div>
