---
import Search from "./icons/search.astro";
---

<div class="h-[2rem] w-[18rem] md:w-[25rem] mt-5">
  <div class="w-[14rem] h-7 ">
    <div class="relative text-gray-600">
        <span class="absolute inset-y-0 left-0 flex items-center pl-2">
          <button type="submit" class="p-1 focus:outline-none focus:shadow-outline">
            <Search />
          </button>
        </span>
        <input type="search" name="q" class="py-2 text-sm w-[100%] text-white bg-slate-200 rounded-md pl-10 focus:outline-none focus:bg-slate-300 focus:text-gray-900" placeholder="Search..." autocomplete="off">
      </div>
  </div>
</div>
