---
import Search from "./icons/search.astro";
import Notification from "./icons/notification.astro";
---

<div class="h-[2rem] w-[18rem] md:w-[25rem] mt-5">
  <div class="grid grid-cols-2 gap-x-[5rem] lg:gap-x-[5rem] xl:gap-x-[11rem]">
    <div class="relative text-gray-600 h-[2rem] w-[10rem] md:w-[14rem] xl:w-[17rem]">
        <span class="absolute inset-y-0 left-0 flex items-center pl-2">
          <button type="submit" class="p-1 focus:outline-none focus:shadow-outline">
            <Search />
          </button>
        </span>
        <input type="search" name="q" class="py-[7px] text-sm w-[100%] text-white bg-slate-200 rounded-md pl-10 focus:outline-none focus:bg-slate-300 focus:text-gray-900" autocomplete="off">
      </div>
      <div class="mt-1">
        <Notification />
      </div>
  </div>
</div>
