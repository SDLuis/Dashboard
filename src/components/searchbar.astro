---
import Search from "./icons/search.astro";
---

<div
  class="relative text-gray-600 h-[2rem] w-[13rem] md:w-[18rem] lg:w-[14rem] xl:w-[17rem]"
>
  <label class="absolute inset-y-0 left-0 flex items-center pl-2" for="q">
      <Search /> <p class="text-slate-200">.</p>
  </label>
  <input
    type="search"
    id="q"
    class="py-[7px] text-sm w-[100%] bg-slate-200 rounded-md pl-10 focus:outline-none focus:bg-slate-300 focus:text-gray-900"
    autocomplete="off"
  />
</div>
